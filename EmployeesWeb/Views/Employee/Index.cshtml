@using EmployeesCore.EntityModel
@model IEnumerable<Employee>

    <br />
 

<div class="search-container">
    <form asp-action="Index" method="get" class="form-inline search-box">
        <div class="form-group">
            <input type="text" name="Name" class="form-control" placeholder="Name" id="nameSearchBox" />
            <input type="text" name="DateOfBirth" class="form-control" placeholder="Date of Birth" id="DobSearchbox" />
            <input type="email" name="Email" class="form-control" placeholder="Email" id="EmailSearchbox" />
            <input type="text" name="Mobile" class="form-control" placeholder="Mobile" id="MobileSearchbox" />
            <button type="submit" class="btn btn-primary search-btn">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>
</div>
<table class="table border-3 custom-border bg-gradient" id="tbid">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                FullName
            </th>
            <th class="text-black">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" style="width:100px; height:100px;" class=" border-1 rounded-circle " />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(x => item.LastName)
                </td>
              @*   <td >
                    @Html.DisplayFor(modelItem => item.Email)
                </td> *@
                <td>
                    @item.Email
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>&nbsp;
                    <a href="javascript:void(0)" onclick="delete_Data('@item.Id')"> <i class="bi bi-trash"></i> </a>

                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/datatables/js/datatables.bootstrap.js"></script>
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function delete_Data(id) {
            // Show confirmation modal using SweetAlert2
            Swal.fire({
                title: 'Are you sure?',
                text: "You want to delete this?",
                icon: 'warning',
                showCancelButton: true,
                // confirmButtonColor: '#3085d6',
                // cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If 'Yes' is clicked, proceed with the delete action
                    $.ajax({
                        type: "POST",
                        url: "/Employee/Delete",
                        data: { id: id },
                        success: function (response) {
                            // Show success message
                            Swal.fire(
                                'Deleted!',
                                'The record has been deleted.',
                                'success'
                            ).then(() => {
                                location.reload(); // Reload the page after successful deletion
                            });
                        },
                        error: function (response) {
                            Swal.fire(
                                'Error!',
                                'There was a problem deleting the record.',
                                'error'
                            );
                        }
                    });
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelled',
                        'Your record is safe :)',
                        'info'
                    );
                }
            });
        }

        $(document).ready(function () {
            // Initialize the DataTable
            var table = $('#tbid').DataTable({
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],

                // Enable pagination with full pagination controls (like 1, 2, 3, 4)
                "pagingType": "full_numbers",

                // Set default page length
                "pageLength": 5,

                // Customize the layout to move pagination to the right
                "dom": '<"top"l>rt<"bottom"ip><"clear">',

            });
            // Custom search for Name (Title) column
            $('#nameSearchBox').on('keyup', function () {
                table.columns(1).search(this.value).draw(); // Column 1 corresponds to Name/Title
            });

            // Custom search for Email column
            $('#EmailSearchbox').on('keyup', function () {
                table.columns(2).search(this.value).draw(); // Column 2 corresponds to Email
            });     
            $('#MobileSearchbox').on('keyup', function () {
                table.columns(3).search(this.value).draw(); // Column 1 corresponds to Name/Title
            });

            // Custom search for Email column
            $('#DobSearchbox').on('keyup', function () {
                table.columns(4).search(this.value).draw(); // Column 2 corresponds to Email
            });
        });
    </script>

}

@section style {
 
    <style>
  
        .custom-border {
            border: 2px solid #686868;
            border-collapse: collapse;
        }
        .search-container {
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-start;
        }

        .search-box {
            border: 2px solid #ccc;
            / Border around the search box / border-radius: 10px;
            / Rounded corners / padding: 10px;
            / Padding inside the box / display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        .form-group {
            display: flex;
            gap: 10px;
            align-items: center;
            width: 100%;
        }

        .form-control {
            width: calc(100% / 5 - 15px);
            / Adjust input field width /
        }

        .search-btn {
            background-color: transparent;
            border: none;
            font-size: 20px;
            color: #007bff;
        }

        
    </style>

    <link href="~/lib/datatables/css/jquery.datatables.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/jquery.datatables_themeroller.css" rel="stylesheet" />
}
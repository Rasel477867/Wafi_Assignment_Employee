@using EmployeesWeb.Models
@model EmpViewModel

 <br />


<div class="search-container">
    <form asp-action="Index" method="get" class="form-inline search-box">
        <div class="form-group">
            <input type="text" asp-for="SearchString.SName"  class="form-control" placeholder="Name" />
            <input type="text" asp-for="SearchString.SBirthDate" class="form-control" placeholder="Date of Birth" />
            <input type="email" asp-for="SearchString.SEmail" class="form-control" placeholder="Email"  />
            <input type="text" asp-for="SearchString.SMobile" class="form-control" placeholder="Mobile"  />
            <button type="submit" class="btn btn-primary search-btn" asp-action="Index">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>
</div>
<table class="table border-3 custom-border bg-gradient" id="tbid">

    <thead>
        <tr>
            <th>
                Photo
            </th>
            <th>
                FullName
            </th>
            <th class="text-black">
                Email
            </th>
            <th>
               Mobile
            </th>
            <th>
               Date Of Birth
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>
                    <img src="@employee.ImageUrl" style="width:100px; height:100px;" class=" border-1 rounded-circle " />
                </td>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Mobile</td>
                 <td>@employee.DOB</td> 
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id"><i class="bi bi-pencil-square"></i></a>&nbsp;
                    <a href="javascript:void(0)" onclick="delete_Data('@employee.Id')"> <i class="bi bi-trash"></i> </a>

                </td>
            </tr>
        }
    </tbody> 
</table>
 <div class="pagination align-items-end">
    <ul>
        @if (Model.Pagination.HasPreviousPage)
        {
            <p><a asp-controller="Employee" asp-action="Index" asp-route-page="@(Model.Pagination.CurrentPage - 1)">Previous</a> &nbsp;&nbsp; </p>
            
        }

        @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
        {
            <p class="@(i == Model.Pagination.CurrentPage ? "active" : "") ">
                <a asp-controller="Employee" asp-action="Index" asp-route-page="@i">@i</a>&nbsp;&nbsp;
            </p>
        }

        @if (Model.Pagination.HasNextPage)
        {
            <p><a asp-controller="Employee" asp-action="Index" asp-route-page="@(Model.Pagination.CurrentPage + 1)">Next</a></p>
        }
    </ul>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/datatables/js/datatables.bootstrap.js"></script>
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function delete_Data(id) {
            // Show confirmation modal using SweetAlert2
            Swal.fire({
                title: 'Are you sure?',
                text: "You want to delete this?",
                icon: 'warning',
                showCancelButton: true,
                // confirmButtonColor: '#3085d6',
                // cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If 'Yes' is clicked, proceed with the delete action
                    $.ajax({
                        type: "POST",
                        url: "/Employee/Delete",
                        data: { id: id },
                        success: function (response) {
                            // Show success message
                            Swal.fire(
                                'Deleted!',
                                'The record has been deleted.',
                                'success'
                            ).then(() => {
                                location.reload(); // Reload the page after successful deletion
                            });
                        },
                        error: function (response) {
                            Swal.fire(
                                'Error!',
                                'There was a problem deleting the record.',
                                'error'
                            );
                        }
                    });
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelled',
                        'Your record is safe :)',
                        'info'
                    );
                }
            });
        }

